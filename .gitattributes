# Auto-detect text files
* text=auto eol=lf

# Whitespace exclusions
*.txt whitespace=-blank-at-eof,-space-before-tab,-tab-in-indent,trailing-space,tabwidth=4
*.md whitespace=-blank-at-eof,-space-before-tab,-tab-in-indent,trailing-space,tabwidth=4
*.cs whitespace=-blank-at-eof,-space-before-tab,-tab-in-indent,trailing-space,tabwidth=4
*.json whitespace=-blank-at-eof,-space-before-tab,-tab-in-indent,trailing-space,tabwidth=4

# Treat these as text files with linefeed endings
*.txt text eol=lf
*.md text eol=lf
*.cs text eol=lf
*.json text eol=lf

# Binary files
*.jpg binary
*.png binary

# Exclude these files from the git archive export (.zip)
.gitattributes export-ignore
.gitignore export-ignore
